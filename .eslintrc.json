{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "semicolons": true,
        "tabWidth": 10,
        "useTabs": false,
        "printWidth": 120,
        "endOfLine": "auto",
        "singleQuote": false,
        "trailingComma": "none",
        "bracketSpacing": true,
        "arrowParens": "always",
        "bracketSameLine": true
      }
    ]
  }
}
